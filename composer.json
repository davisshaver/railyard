{
  "name": "davisshaver/railyard",
  "description": "Starter kit for a Philly Publishing site.",
  "type": "project",
  "keywords": [
    "circleci",
    "github-api",
    "wordpress",
    "wordpress-development"
  ],
  "minimum-stability": "alpha",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "vcs",
      "url": "https://github.com/wordpress/gutenberg"
    },
    {
      "type": "vcs",
      "url": "https://github.com/Automattic/syndication"
    },
    {
      "type": "vcs",
      "url": "https://github.com/davisshaver/terminal/"
    }
  ],
  "require": {
    "automattic/syndication": "^2.0.1",
    "composer/installers": "^1.3.0",
    "davisshaver/terminal": "dev-master",
    "humanmade/s3-uploads": "^2.0@beta",
    "oomphinc/composer-installers-extender": "^1.1",
    "vlucas/phpdotenv": "^2.4",
    "wikimedia/composer-merge-plugin": "^1.4",
    "wordpress/gutenberg": "^1.9.1"
  },
  "require-dev": {
    "danielbachhuber/composer-lock-updater": "^0.2.1",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^2.9.0",
    "wp-coding-standards/wpcs": "dev-master",
    "wpackagist-plugin/debug-bar-actions-and-filters-addon": "dev-master",
    "wpackagist-plugin/debug-bar-console": "dev-master",
    "wpackagist-plugin/debug-bar": "dev-master",
    "wpackagist-plugin/developer-loggers-for-simple-history": "dev-master",
    "wpackagist-plugin/email-log": "dev-master",
    "wpackagist-plugin/https-mixed-content-detector": "dev-master",
    "wpackagist-plugin/log-deprecated-notices": "dev-master",
    "wpackagist-plugin/query-monitor": "dev-master",
    "wpackagist-plugin/rewrite-rules-inspector": "dev-master",
    "wpackagist-plugin/rewrite-testing": "dev-master",
    "wpackagist-plugin/simple-history": "dev-master",
    "wpackagist-plugin/transients-manager": "dev-master",
    "wpackagist-plugin/user-switching": "dev-master",
    "wpackagist-plugin/wp-crontrol": "dev-master",
    "wpackagist-plugin/wp-sweep": "dev-master"
  },
  "config": {
    "vendor-dir": "vendor",
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "7.0"
    }
  },
  "extra": {
    "merge-plugin": {
        "include": [
            "composer-addons/*.json"
        ],
        "recurse": true,
        "replace": false,
        "ignore-duplicates": true,
        "merge-dev": true,
        "merge-extra": false,
        "merge-extra-deep": false,
        "merge-scripts": true
    },
    "wordpress-install-dir": "web/wp",
    "installer-paths": {
      "public/wp-content/mu-plugins/{$name}/": ["wordpress/gutenberg"],
      "public/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "public/wp-content/themes/{$name}/": ["type:wordpress-theme"]
    }
  },
  "scripts": {
    "build-assets": [
      "composer update --no-dev --no-ansi --no-interaction --optimize-autoloader --no-progress"
    ],
    "build-assets-dev": [
      "composer update --no-ansi --no-interaction --optimize-autoloader --no-progress"
    ],
    "cleanup": [
      "bash ./scripts/composer/cleanup-composer"
    ],
    "post-install-cmd": [
      "@cleanup"
    ],
    "post-update-cmd": [
      "@cleanup"
    ],
    "post-create-project-cmd": [
      "@cleanup"
    ],
    "code-sniff": [
      "./vendor/bin/phpcs ./web/wp-content/plugins/custom/"
    ],
    "scrub-db": [
      "wp package install trepmal/wp-revisions-cli",
      "wp revisions clean --hard",
      "wp db optimize"
    ]
  }
}
